<div class="container text-center py-5">
  <h4 class="mb-3">会員一覧</h4>
  <div class="row">
    <table class="table table-bordered col-8 offset-2">
      <thead>
        <th>氏名</th>
        <th>メールアドレス</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to admin_user_path(user.id) do %>
            <%= user.last_name %>&emsp;<%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>