<div class="container col-2">
  <h4 class="text-center">会員情報編集</h4>
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>

  <div class="row justify-content-center">
    <div class="d-flex flex-column mr-3">
      <label>(姓)</label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", size: 13 %>
    </div>
    <div class="d-flex flex-column">
      <label>(名)</label>
      <%= f.text_field :first_name,autofocus: true, autocomplete: "first_name",  placeholder: "道子", size: 13 %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="d-flex flex-column mr-3">
      <label>(セイ)</label>
      <%= f.text_field :last_name_kana, autoforcus: true, autocomplete: "last_name_kana",  placeholder: "レイワ", size: 13 %>
    </div>
    <div class="d-flex flex-column">
      <label>(メイ)</label>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",  placeholder: "ミチコ", size: 13 %>
    </div>
  </div>
  <div class="row justify-content-center">
    <label>電話番号(ハイフンなし)</label>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: '0000000000', size: 30 %>
  </div>
  <div class="row justify-content-center">
    <label class="">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size: 30 %>
  </div>
  <div class="row mb-4 justify-content-center mt-3">
    <label>会員ステータス</label>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "有効", {value: :false, style: "display: inline-block;"} %>&emsp;
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "退会", {value: :true, style: "display: inline-block;"} %>
  </div>
  <div class="row justify-content-center mt-3">
    <%= f.submit "変更を保存", class: 'btn btn-base' %>
  </div>
  <% end %>
</div>