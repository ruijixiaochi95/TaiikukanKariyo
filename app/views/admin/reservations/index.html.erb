<div class="container text-center">
  <h4 class="mb-3">予約一覧</h4>
  <div class="row justify-content-center">
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th>予約日時</th>
            <th>予約者</th>
            <th>予約体育館</th>
          </tr>
        </thead>
        <tbody>
          <% @reservations.each do |reservation| %>
          <tr>
            <td>
              <%= link_to admin_reservation_path(reservation.id) do %>
                <%= reservation.day %>&emsp;<%= reservation.time %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_user_path(reservation.user.id) do %>
                <%= reservation.user.last_name %>&emsp;<%= reservation.user.first_name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_gym_path(reservation.facility.gym.id) do %>
                <%= reservation.facility.gym.name %>&ensp;:&ensp;<%= reservation.facility.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination justify-content-center">
    <%= paginate @reservations %>
  </div>
</div>
