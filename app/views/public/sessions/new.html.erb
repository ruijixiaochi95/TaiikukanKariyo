<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h4 class="text-center">ログイン</h4>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="form-group">
          <label class="text-left">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: 'form-control' %>
        </div>
        <div class="form-group">
          <label class="text-left">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>
        <div class="row justify-content-center text-center">
          <div class="col-8">
            <%= f.submit "ログイン", class: 'btn btn-base btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
