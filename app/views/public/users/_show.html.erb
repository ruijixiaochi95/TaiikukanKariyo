<% if admin_signed_in? %>
  <h4 class="pb-3">会員詳細</h4>
<% end %>
<div class="row justify-content-center">
  <table class="table table-bordered col-7">
    <tr>
     <td class="col-2">氏名</td>
     <td class="col-5"><%= user.last_name %>&emsp;<%= user.first_name %></td>
    </tr>
    <tr>
      <td class="col-2">カナ</td>
      <td class="col-5"><%= user.last_name_kana %>&emsp;<%= user.first_name_kana %></td>
    </tr>
    <tr>
      <td class="col-2">電話番号</td>
      <td class="col-5"><%= user.phone_number %></td>
    </tr>
    <tr>
      <td class="col-2">メールアドレス</td>
      <td class="col-5"><%= user.email %></td>
    </tr>
    <% if admin_signed_in? %>
    <tr>
      <td class="col-2>">会員ステータス</td>
      <td class="col-5">
        <% if user.is_active == false %>
          <span class="text-success">有効</span>
        <% else %>
          <span class="">退会</span>
        <% end %></td>
    </tr>
    <% end %>
  </table>
</div>
  
<% if admin_signed_in? %>
  <%= link_to "会員編集", edit_admin_user_path, class: 'btn btn-base' %>
<% elsif user_signed_in? %>
  <%= link_to "マイページ編集", users_infomation_edit_path, class: 'btn btn-base' %>
<% end %>
  
<h4 class="py-3">予約一覧</h4>
<div class="row justify-content-center">
  <table class="table table-bordered col-7">
    <thead>
      <tr>
        <th colspan="2">予約日</th>
      </tr>
    </thead>
    <tbody>
      <% user_reservations.each do |user_reservation| %>
      <tr>
        <td>
          <%= user_reservation.day %>&emsp;<%= user_reservation.time %>
        </td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to '詳細', admin_reservation_path(user_reservation.id) %>
            <%= link_to '削除', admin_reservation_path(user_reservation.id), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
          <% elsif user_signed_in? %>
            <%= link_to '詳細', gym_facility_reservation_path(user_reservation.facility.gym, user_reservation.facility, user_reservation) %>
            <%= link_to '削除', gym_facility_reservation_path(user_reservation.facility.gym, user_reservation.facility, user_reservation), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
          <% end %>
        </td>
      </tr>
      <% end %>
      <% if @user_reservations.blank? %>
      <tr>
        <td>予約はありません。</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>