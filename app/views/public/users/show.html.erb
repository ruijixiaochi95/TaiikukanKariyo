<div class="container py-5 text-center">
  <div class="row justify-content-center">
  <table class="table table-bordered col-7">
    <tr>
     <td class="col-5">氏名</td>
     <td class="col-7"><%= @user.last_name %>&emsp;<%= @user.first_name %></td>
    </tr>
    <tr>
      <td class="col-5">カナ</td>
      <td class="col-7"><%= @user.last_name_kana %>&emsp;<%= @user.first_name_kana %></td>
    </tr>
    <tr>
      <td class="col-5">電話番号</td>
      <td class="col-7"><%= @user.phone_number %></td>
    </tr>
    <tr>
      <td class="col-5">メールアドレス</td>
      <td class="col-7"><%= @user.email %></td>
    </tr>
  </table>
  
  </div>
  <div class="form-group">
    <%= link_to "マイページ編集", users_infomation_edit_path, class: 'btn btn-base' %>
  </div>
  <h4 class="py-3">予約一覧</h4>
  <div class="row justify-content-center">
  
  <table class="table table-bordered col-7">
    <thead>
      <tr>
        <th scope"col">予約日</th>
      </tr>
    </thead>
    <tbody>
      <% @user_reservations.each do |user_reservation| %>
      <tr>
        <td>
          <%= user_reservation.day %>
          <%= user_reservation.time %>
        </td>
        <td>
          <%= link_to '詳細', gym_facility_reservation_path(user_reservation.facility.gym, user_reservation.facility, user_reservation) %>
          <%= link_to '削除', gym_facility_reservation_path(user_reservation.facility.gym, user_reservation.facility, user_reservation), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
        </td>
      </tr>
      <% end %>
      <% if @user_reservations.blank? %>
      <tr>
        <td>予約はありません。</td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>