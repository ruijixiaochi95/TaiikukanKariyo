<div class="container my-5">
  <%= render "layouts/errors", obj: @user %>
  <h4 class="text-center py-3">会員情報編集</h4>
  <%= form_with model: @user, url: users_infomation_path, method: :patch do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-3">
        <div class="form-group">
          <label>(姓)</label>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", size: 13, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-3">
        <div class="form-group">
          <label>(名)</label>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",  placeholder: "道子", size: 13, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-3">
        <div class="form-group">
          <label>(セイ)</label>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",  placeholder: "レイワ", size: 13, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-3">
        <div class="form-group">
          <label>(メイ)</label>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",  placeholder: "ミチコ", size: 13, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-6">
        <div class="form-group">
          <label>電話番号</label>
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: '0000000000', size: 30, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-6">
        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size: 30, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-md-6 col-lg-3">
        <%= f.submit "変更を保存", class: 'btn btn-base btn-block' %>
      </div>
      <div class="col-md-6 col-lg-3">
        <%= link_to "退会する", users_unsubscribe_path, class: 'btn btn-danger btn-block' %>
      </div>
    </div>
  <% end %>
</div>
