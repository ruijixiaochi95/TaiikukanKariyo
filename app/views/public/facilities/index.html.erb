<div class="container">
  <div class="row justify-content-center">
    <table class="table text-center col-6">
      <thead>
        <tr>
          <th>予約したい設備を選択してください</th>
        </tr>
      </thead>
      <tbody>
        <% @facilities.each do |facility| %>
        <tr>
          <td>
            <% if facility.is_open == false %>
              <%= link_to gym_facility_reservations_path(@gym, facility) do %>
                <%= facility.name %>
              <% end %>
            <% elsif facility.is_open == true %>
              <%= facility.name %><span>　　※現在予約することが出来ません</span>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>