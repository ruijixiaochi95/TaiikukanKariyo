<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h4>新規予約</h4>
    </div>
    <div class="col-12 mt-3">
      <%= form_with model: [@gym, @facility, @reservation], url: gym_facility_reservations_path(@gym, @facility) do |f| %>
      <div class="day form-group text-center">
        <%= f.label :day, '日付' %>
        <%= f.text_field :day, class: 'form-controll', value: @day, readonly: true %>
      </div>
      <div class="time form-group text-center">
        <%= f.label :time, '時間' %>
        <%= f.text_field :time, class: 'form-controll', value: @time, readonly: true %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :facility_id, value: @facility.id %>
      <%= f.hidden_field :start_time, value: @start_time %>
      <div class="submit text-center">
        <%= f.submit value: '予約する', class: 'btn btn-base' %>
      </div>
      <% end %>
      <div class="col-12 text-right">
        <%= link_to "戻る", gym_facility_reservations_path(@gym, @facility) %>
      </div>
    </div>
  </div>
</div>