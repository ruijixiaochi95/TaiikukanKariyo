<div class="container py-2 col-md-5">
  <%= render "layouts/errors", obj: resource %>
  <h4 class="text-center">新規会員登録</h4>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

  <div class="row justify-content-center">
    <div class="d-flex flex-column">
      <label>(姓)</label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", size: 13, class: 'mr-3'  %>
    </div>
    <div class="d-flex flex-column">
      <label>(名)</label>
      <%= f.text_field :first_name,autofocus: true, autocomplete: "first_name",  placeholder: "道子", size: 13 %>
    </div>
  </div>
  <div class="row justify-content-center mt-2">
    <div class="d-flex flex-column">
      <label>(セイ)</label>
      <%= f.text_field :last_name_kana, autoforcus: true, autocomplete: "last_name_kana",  placeholder: "レイワ", size: 13, class: 'mr-3' %>
    </div>
    <div class="d-flex flex-column">
      <label>(メイ)</label>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",  placeholder: "ミチコ", size: 13 %>
    </div>
  </div>
  <div class="row justify-content-center mt-2">
    <div class="d-flex flex-column">
      <label>電話番号(ハイフンなし)</label>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: '0000000000', size: 30 %>
    </div>
  </div>
  <div class="row justify-content-center mt-2">
    <div class="d-flex flex-column">
      <label>メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size: 30 %>
    </div>
  </div>
  <div class="row justify-content-center mt-2">
    <div class="d-flex flex-column">
      <label>パスワード
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> 文字以上)
      <% end %>
      </label>
      <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
    </div>
  </div>

  <div class="row justify-content-center mt-2">
    <div class="d-flex flex-column">
      <label>パスワード確認用</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit "新規登録", class: 'btn btn-base my-3' %>
  </div>
  <% end %>
</div>
