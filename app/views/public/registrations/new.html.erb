<div class="container">
  <h4 class="">新規会員登録</h4>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <label class="">名前</label>
    <label class="">(姓)</label>
    <div class="col-md-2 col-md-offset-5">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", size: 15 %>
    </div>
    </div>
    <label class="">(名)</label>
    <div class="">
      <%= f.text_field :first_name,autofocus: true, autocomplete: "first_name",  placeholder: "道子", size: 15 %>
    </div>
  </div>
  
  <div class="row">
    <label class="">フリガナ</label>
    <label class="">(セイ)</label>
    <div class="">
      <%= f.text_field :last_name_kana, autoforcus: true, autocomplete: "last_name_kana",  placeholder: "レイワ", size: 15 %>
    </div>
    <label class="">(メイ)</label>
    <div class="">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",  placeholder: "ミチコ", size: 15 %>
    </div>
  </div>
  
  <div class="row">
    <label class="">電話番号(ハイフンなし)</label>
    <div class="">
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: '0000000000', size: 30 %>
    </div>
  </div>
  
  <div class="row">
    <label class="">メールアドレス</label>
    <div class="">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size: 30 %>
    </div>
  </div>

  <div class="row">
    <label class="">パスワード
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> 文字以上)
      <% end %>
    </label>
    <div class="">
      <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
    </div>
  </div>

  <div class="row">
    <label class="">パスワード確認用</label>
    <div class="">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
    </div>
  </div>

  <div class="row">
    <div class=""></div>
    <div class="">
      <%= f.submit "新規登録", class: 'btn w-75' %>
    </div>
  </div>
  <% end %>
</div>
