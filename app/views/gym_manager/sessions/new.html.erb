<div class="container py-5 col-md-2">
  <h4 class="text-center">ログイン</h4>

  <%= form_with model: @gym_manager, url: gym_manager_session_path do |f| %>
  <div class="row justify-content-center d-flex flex-column mb-3">
    <label>メールアドレス</label>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size: 50 %>
    </div>
  </div>
  <div class="row justify-content-center d-flex flex-column mb-3">
    <label>パスワード</label>
    <div>
      <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
    </div>
  </div>

  <div>
    <%= f.submit "ログイン", class: 'btn btn-base' %>
  </div>
  <% end %>
</div>